@using VeganLife.Common
@model VeganLife.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

</head>
<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="overlay-image" style="background-image:url(https://images.theconversation.com/files/352720/original/file-20200813-22-u6p0qo.jpg?ixlib=rb-1.1.0&rect=0%2C0%2C6576%2C4288&q=45&auto=format&w=926&fit=clip);"></div>
                <div class="container" id="container-carousel-pic">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <h1 id="text-carousel"> "Are there health benefits to going vegan?"</h1>
                        <p id="text-carousel">The number of people cutting down on meat and dairy, or cutting these foods from their diets entirely, has been rising over the last decade. The number of vegans in the UK, for example, quadrupled between 2006 and 2018, according to research by The Vegan Society.</p>
                    }
                    else
                    {
                        <h1 id="text-carousel">Sing up or login in to start you vegan journey.</h1>
                        <p id="text-carousel">That way you will be able to see some veggie products, see our recipes and you will have the opportunity to create one.</p>
                    }
                </div>
            </div>
            <div class="carousel-item">
                <div class="overlay-image" style="background-image:url(https://veann.com/wp-content/uploads/2017/12/shutterstock_641257942-1-750x500.jpg);"></div>
                <div class="container" id="container-carousel-pic">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <h1 id="text-carousel">Vegan Lifestyle: Why Veganism Is More Than a Diet</h1>
                        <p id="text-carousel">When you hear the word vegan you might think of tofu and Tofurkey or perhaps fresh vegetables and beans. But did you know that veganism can actually be much more than a diet? </p>
                    }
                    else
                    {
                        <h1 id="text-carousel">Sing up or login in to start you vegan journey.</h1>
                        <p id="text-carousel">That way you will be able to see some veggie products, see our recipes and you will have the opportunity to create one.</p>
                    }
                </div>
            </div>
        </div>
        <a href="#myCarousel" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a href="#myCarousel" class="carousel-control-next" role="button" data-slide="next">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
    <div class="row">
        <div class="card" style="width: 18rem;">
            <img src="https://121clicks.com/wp-content/uploads/2022/03/vegan_food_photography_andy_featured.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">Well-planned vegan diets follow healthy eating guidelines, and contain all the nutrients that our bodies need.</p>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/47/Vegan_dish_%2842019058960%29.jpg/1200px-Vegan_dish_%2842019058960%29.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">If you invite a dinner guest who's a vegan, you'll want to check your menu carefully to make sure it follows two basic rules.</p>
            </div>
        </div>
        <div class="card" style="width: 18rem;">
            <img src="https://images.firstpost.com/wp-content/uploads/2019/11/Vegan380GettyImages.jpg?impolicy=website&width=1200&height=800" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text">Living a vegan lifestyle means that you are not contributing to the many negative environmental impacts of the animal industry.</p>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

