@using VeganLife.Common
@model VeganLife.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <p>We have:</p>
    <ul>
        <li>Recipes: @Model.RecipesCount</li>
        <li>Categories: @Model.CategoriesCount</li>
        <li>RecipeImages: @Model.RecipeImagesCount</li>
        <li>Ingredients: @Model.IngredientsCount</li>
        <li>ProductImages: @Model.ProductImagesCount</li>
        <li>Products: @Model.ProductsCount</li>

    </ul>
</div>
